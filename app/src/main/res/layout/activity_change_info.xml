<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Login.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Login.RegisterActivity">

        <Button
            android:id="@+id/backbtn_change"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:background="@drawable/backward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/tv_shelter_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="146dp"
            android:layout_marginEnd="146dp"
            android:gravity="center"
            android:text="회원정보 수정"
            android:textColor="#555555"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="11.7dp"
            android:text="닉네임"
            android:textColor="#0281ff"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="18.7dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_name_changeU"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_email"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:backgroundTint="#bce0fd"
                android:ems="20"
                android:hint="닉네임을 입력하세요"
                android:inputType="textEmailAddress"
                android:textColor="#555555"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <Button
                android:id="@+id/okNickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/confirm_bt"
                android:ellipsize="marquee"
                android:padding="-5dp"
                android:scaleType="fitCenter"
                android:layout_gravity="right"/>

        </LinearLayout>



        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="11.7dp"
            android:text="이메일"
            android:textColor="#0281ff"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="18.7dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_email_change"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_email"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:backgroundTint="#bce0fd"
                android:ems="20"
                android:hint="닉네임을 입력하세요"
                android:inputType="textEmailAddress"
                android:textColor="#555555"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <Button
                android:id="@+id/okEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/confirm_bt"
                android:ellipsize="marquee"
                android:padding="-5dp"
                android:scaleType="fitCenter"
                android:layout_gravity="right"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_eamil"
            android:layout_centerInParent="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="11.7dp"
            android:text="비밀번호"
            android:textColor="#0281ff"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_password"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="18.7dp"
            android:backgroundTint="#bce0fd"
            android:hint="비밀번호를 8자 이상 입력해주세요"
            android:inputType="textPassword"
            android:textColor="#555555"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_passwordre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_password"
            android:layout_centerInParent="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="11.7dp"
            android:text="비밀번호 재확인"
            android:textColor="#0281ff"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_passwordre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_passwordre"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="18.7dp"
            android:backgroundTint="#bce0fd"
            android:hint="비밀번호를 다시 입력해주세요"
            android:inputType="textPassword"
            android:textColor="#555555"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_passwordre"
            android:layout_centerInParent="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="11.7dp"
            android:text="성별"
            android:textColor="#0281FF"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="32.7dp"
            android:layout_below="@id/tv_gender"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="-23dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/colorWhite"
            android:popupTheme="@android:style/ThemeOverlay.Material.Light" />

    </LinearLayout>

    <Button
        android:id="@+id/Change_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="43.3dp"
        android:background="#0281ff"
        android:text="확인"
        android:textColor="#ffffff"
        android:textSize="14.7sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>