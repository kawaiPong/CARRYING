<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#0281ff</item>
        <item name="colorAccent">#0281ff</item>

        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#FFF</item>
        <item name="android:textColor">#0281ff</item>
        <item name="colorAccent">#399BFF</item>
        <item name="colorControlNormal">#999999</item>
        <item name="textColorAlertDialogListItem">#555555</item>
    </style>

    <style name="popupTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#0281ff</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
